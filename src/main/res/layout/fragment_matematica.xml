<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Matematica">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Nivel Basico -->
            <TextView
                android:id="@+id/txtNivelBasic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/NivelBasico"
                android:textSize="@dimen/tamtexto3"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.132"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/ViewBasic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tam1"
                android:layout_marginTop="12dp"
                android:background="@color/black"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNivelBasic">
            </View>
            <!-- Libro primer grado -->
            <ImageButton
                android:id="@+id/Mat1"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/mat1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ViewBasic"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvmat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/TxtMat1"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat1" />

            <!-- Video primer grado -->
            <ImageButton
                android:id="@+id/Mat1Video"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/mat1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ViewBasic"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvvideoMat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="96dp"
                android:text="@string/VideoMat1"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat1Video" />

            <!-- Libro segundo Grado -->
            <ImageButton
                android:id="@+id/Mat2Libro"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/mat2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvmat1"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvlibro2Mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="12dp"
                android:text="@string/libro2Mat"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat2Libro"
                tools:ignore="MissingConstraints" />

            <!-- Video segundo Grado -->
            <ImageButton
                android:id="@+id/Mat2Video"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/mat2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvvideoMat1"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvVideo2Mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="84dp"
                android:text="@string/video2Mat"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat2Video"
                tools:ignore="MissingConstraints" />


            <!-- Nivel Intermedio -->

            <TextView
                android:id="@+id/txtNivelIntermedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/NivelIntermedio"
                android:textSize="@dimen/tamtexto3"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.158"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvlibro2Mat"
                tools:ignore="MissingConstraints" />
            <View
                android:id="@+id/ViewIntermedio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tam1"
                android:background="@color/black"
                android:layout_marginTop="@dimen/margen8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNivelIntermedio"/>

            <!-- Libro Tercer grado -->
            <ImageButton
                android:id="@+id/Mat3"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/mat3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ViewIntermedio"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvMat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/TxtMat3"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat3" />

            <!-- Video tercer grado -->
            <ImageButton
                android:id="@+id/Mat3Video"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/mat3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ViewIntermedio"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvvideoMat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="96dp"
                android:text="@string/VideoMat3"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat3Video" />

            <!-- Libro cuarto Grado -->
            <ImageButton
                android:id="@+id/Mat4Libro"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/mat4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMat3"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvlibro4Mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="12dp"
                android:text="@string/libro4Mat"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat4Libro"
                tools:ignore="MissingConstraints" />

            <!-- Video cuarto Grado -->
            <ImageButton
                android:id="@+id/Mat4Video"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/mat4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvvideoMat3"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvVideo4Mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="84dp"
                android:text="@string/video4Mat"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat4Video"
                tools:ignore="MissingConstraints" />


            <!-- Nivel Avanzado -->
            <TextView
                android:id="@+id/txtNivelAvanzado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/NivelAvanzado"
                android:textSize="@dimen/tamtexto3"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.158"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvlibro4Mat"
                tools:ignore="MissingConstraints" />
            <View
                android:id="@+id/ViewAvanzado"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tam1"
                android:background="@color/black"
                android:layout_marginTop="@dimen/margen8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNivelAvanzado"/>

            <!-- Libro Quinto grado -->
            <ImageButton
                android:id="@+id/Mat5"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/mat5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ViewAvanzado"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvMat5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/TxtMat5"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat5" />

            <!-- Video quinto grado -->
            <ImageButton
                android:id="@+id/Mat5Video"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/mat5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ViewAvanzado"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvvideoMat5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="96dp"
                android:text="@string/VideoMat5"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat5Video" />

            <!-- Libro sexto Grado -->
            <ImageButton
                android:id="@+id/Mat6Libro"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/mat6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMat5"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvlibro6Mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="12dp"
                android:text="@string/libro6Mat"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat6Libro"
                tools:ignore="MissingConstraints" />

            <!-- Video sexto Grado -->
            <ImageButton
                android:id="@+id/Mat6Video"
                android:layout_width="114dp"
                android:layout_height="136dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/mat6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvvideoMat5"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvVideo6Mat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="84dp"
                android:text="@string/video6Mat"
                android:textSize="@dimen/tamTexto5"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mat6Video"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>